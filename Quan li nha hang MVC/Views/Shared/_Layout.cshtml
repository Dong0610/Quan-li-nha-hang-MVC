    <title>Quản lí nhà hàng</title>
    <link href="~/Content/css/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/fontawesome-free-6.2.1/css/all.min.css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/style.css")" />
    <link rel="stylesheet" href="~/Content/css/style0cs.css" />
    <link rel="stylesheet" href="~/Content/css/hoadon.css" />
    <link rel="stylesheet" href="~/Content/css/alter.css" />
    <link rel="stylesheet" href="~/Content/css/tonkho.css" />
    <link rel="stylesheet" href="~/Content/css/tablere.css" />
    <link rel="stylesheet" href="~/Content/css/home_view.css" />
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.3.js"
            integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
            crossorigin="anonymous"></script>

    @Styles.Render("~/Content/css/style.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

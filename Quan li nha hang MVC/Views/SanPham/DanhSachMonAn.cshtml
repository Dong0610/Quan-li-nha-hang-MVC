                            url: "@Url.Action("ChiTetDSThucPham", "SanPham")",
                            method: "POST",
                            data: {
                                idma: $("#txtdtidmon").val()
                            }
                        }).done(function (response) {
                            var stt = 0;
                            $.each(response, function (e, obj) {

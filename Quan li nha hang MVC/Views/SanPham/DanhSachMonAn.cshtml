            return  `<tr>
                         <td style="text-align:center;">
                           `+stt +`
                        </td>
                        <td style="text-align:center;">
                            `+ [obj.ID_Hang] +`
                        </td>
                        <td>
                           `+[obj.TenHang]+`
                        </td>
                        <td style="text-align:center;">
                           `+[obj.DinhLuong]+`
                        </td>
                        <td style="text-align:center;">
                           `+[obj.DonViDung]+`
